{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "@web/*": ["./web/src/*"],
      "@mobile/*": ["./mobile/src/*"],
      "@functions/*": ["./functions/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "web/src/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "lib",
    "functions/lib",
    "mobile/node_modules",
    "web/node_modules",
    "functions/node_modules"
  ],
  "references": [
    { "path": "./web", "composite": true },
    { "path": "./functions", "composite": true }
  ]
}